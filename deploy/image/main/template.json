{
  "variables": {
    "cr_temp_user_password": "{{env `cr_temp_user_password`}}",
    "source_image": "{{env `source_image`}}",
    "image_name": "potatobox_v1_{{isotime `200601021504`}}",
    "profile": "{{env `ALICLOUD_PROFILE`}}",
    "region": "{{env `ALICLOUD_REGION`}}"
  },
  "builders": [
    {
      "type": "alicloud-ecs",
      "region": "{{user `region`}}",
      "profile": "{{user `profile`}}",
      "image_name": "{{user `image_name`}}",
      "source_image": "{{user `source_image`}}",
      "ssh_username": "root",
      "instance_type": "ecs.n1.tiny",
      "instance_name": "potatobox_image_builder",
      "io_optimized": true,
      "internet_charge_type": "PayByTraffic",
      "image_force_delete": true,
      "image_force_delete_snapshots": true,
      "system_disk_mapping": {
        "disk_size": 20,
        "disk_category": "cloud_ssd"
      },
      "tags": {
        "project": "potatobox",
        "image_name": "{{user `image_name`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "30s",
      "inline": "mkdir -p /usr/local/share/potatobox"
    },
    {
      "type": "file",
      "source": "scripts",
      "destination": "/usr/local/share/potatobox/scripts"
    },
    {
      "type": "file",
      "source": "setup",
      "destination": "/tmp/setup"
    },
    {
      "type": "shell",
      "environment_vars": [
        "CR_TEMP_USER_PASSWORD={{user `cr_temp_user_password`}}"
      ],
      "inline": [
        "chmod +x -R /tmp/setup",
        "cd /tmp/setup && for script in $(ls *.sh); do echo start execute $script; ./$script; echo end execute $script; done; rm -rf /tmp/setup"
      ]
    }
  ]
}
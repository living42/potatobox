{
  "variables": {
    "image_name": "potatobox_v1_basic_{{isotime `200601021504`}}",
    "profile": "{{env `ALICLOUD_PROFILE`}}",
    "region": "{{env `ALICLOUD_REGION`}}"
  },
  "builders": [
    {
      "type": "alicloud-ecs",
      "region": "{{user `region`}}",
      "profile": "{{user `profile`}}",
      "image_name": "{{user `image_name`}}",
      "source_image": "debian_10_4_x64_20G_alibase_20200717.vhd",
      "ssh_username": "root",
      "instance_type": "ecs.n1.tiny",
      "instance_name": "potatobox_basic_image_builder",
      "io_optimized": true,
      "internet_charge_type": "PayByTraffic",
      "image_force_delete": true,
      "image_force_delete_snapshots": true,
      "system_disk_mapping": {
        "disk_size": 20,
        "disk_category": "cloud_ssd"
      },
      "tags": {
        "project": "potatobox",
        "image_name": "{{user `image_name`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": "true",
      "pause_before": "30s"
    },
    {
      "type": "file",
      "source": "setup",
      "destination": "/tmp/setup"
    },
    {
      "type": "shell",
      "inline": [
        "chmod +x -R /tmp/setup",
        "cd /tmp/setup && for script in $(ls *.sh); do echo start execute $script; ./$script; echo end execute $script; done; rm -rf /tmp/setup"
      ]
    }
  ]
}